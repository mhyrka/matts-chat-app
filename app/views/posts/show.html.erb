<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col">
    <strong>
      <%= @post.title %>
    </strong>
  </div>
</div>

<div class="row">
  <div class="col-2">
    <%= @post.user.username %>
  </div>

  <div class="col">
    <p>
      <%= @post.content %>
    </p>
  </div>

  <div class="col-2">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
  </div>
</div>


<% @comments.each do |comment| %>
  <%= render 'comment', comment: comment %>
<% end %>

<%= link_to 'Comment', new_comment_path(post_id: @post.id) %>
