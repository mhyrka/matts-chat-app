<p id="notice"><%= notice %></p>

<% @posts.each do |post| %>
  <div class="post-card">
    <div>
      <h2>
        <%= link_to post.title, post %>
      </h2>

      <div class="col-2">
        <em><%= post.user.username %></em>
      </div>
    </div>

    <div class="col-2">
      Comments: <%= post.comments.count %>
    </div>

  </div>
<% end %>

<div class="row">
  <div class="col">
    <%= paginate @posts %>
  </div>
  <div class="col-2">
    <%= link_to 'New Post', new_post_path %>
  </div>
</div>
