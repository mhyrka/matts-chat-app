<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="login-card">
      <div class="login-field">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "login-input" },
                    as: :email %>
      </div>
      
      <div class="login-field">
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "login-input" } %>
      </div>

      <div class="login-field">
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "login-input" } %>
      </div>
      <div class="login-field">
        <%= f.input :username, autofocus: true, autocomplete: "username", required: true, input_html: { class: "login-input" } %>
      </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
